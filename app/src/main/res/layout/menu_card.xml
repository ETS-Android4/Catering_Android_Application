<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_6sdp"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/card_view_sub_menu_items"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/sub_menuitems_relative_layout"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_submenu_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingTop="@dimen/_5sdp"
                android:text="Indian Menu"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/text_view_submenu_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_view_submenu_1"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingTop="@dimen/_5sdp"
                android:text="Indian Menu"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_view_submenu_3"
                android:layout_below="@+id/text_view_submenu_2"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingTop="@dimen/_5sdp"
                android:text="Indian Menu"
                android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/text_view_submenu_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/text_view_submenu_3"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingTop="@dimen/_5sdp"
                android:text="Indian Menu"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/text_view_submenu_read_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_submenu_4"
                android:layout_alignParentLeft="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingTop="@dimen/_5sdp"
                android:text="Read More ..."
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        app:cardBackgroundColor="@color/purple_500"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="@dimen/_60sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative_layout_top_menu_card"
            android:layout_height="@dimen/_60sdp">

            <TextView
                android:id="@+id/text_view_title_menu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:fontFamily="@font/akaya_telivigala"
                android:paddingTop="@dimen/_5sdp"
                android:text="Indian Menu"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/arrow_image_view_menu"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:src="@drawable/arrow_down"
                app:tint="@color/white" />


         </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>




</RelativeLayout>