<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_forgotpassword"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:titleTextColor="@color/purple_700"
        app:titleTextAppearance="@style/ToolbarTitleStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_below="@+id/toolbar_forgotpassword"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_20sdp"
            android:adjustViewBounds="true"
            app:boxBackgroundMode="outline"
            android:hint="User Name"
            android:textColor="@color/purple_500"
            app:boxStrokeColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:id="@+id/text_input_edit_text_forgotpass_user_name"
                android:adjustViewBounds="true"
                android:drawableLeft="@drawable/user_img"
                android:drawablePadding="@dimen/_10sdp"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            app:boxBackgroundColor="@color/purple_500"
            app:boxBackgroundMode="outline"
            android:hint="User Email ID"
            android:layout_width="match_parent"
            app:boxStrokeColor="@color/purple_500"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:id="@+id/text_input_edit_text_forgotpass_user_mail"
                android:drawableLeft="@drawable/mailcopy"
                android:drawablePadding="@dimen/_10sdp"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:boxStrokeColor="@color/purple_500"
            android:theme="@style/RedAccent"
            app:boxBackgroundMode="outline"
            app:passwordToggleEnabled="true"
            android:hint="New Password"
            app:passwordToggleTint="@color/purple_500"
            android:textColor="@color/purple_500"
            android:textColorHint="@color/purple_500"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:background="@android:color/transparent"
                android:id="@+id/text_input_edit_text_forgotpass_user_new_password"
                android:drawableStart="@drawable/keycopy"
                android:drawablePadding="@dimen/_10sdp"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:theme="@style/RedAccent"
            app:boxStrokeColor="@color/purple_500"
            app:boxBackgroundMode="outline"
            app:passwordToggleEnabled="true"
            android:hint="Confirm Password"
            app:passwordToggleTint="@color/purple_500"
            android:layout_marginBottom="@dimen/_23sdp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/purple_500"
                android:textColorHint="@color/purple_500"
                android:id="@+id/text_input_edit_text_forgotpass_user_con_password"
                android:drawableStart="@drawable/keycopy"
                android:drawablePadding="@dimen/_10sdp"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_forgotpass_update_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/purple_500"
        android:fontFamily="@font/abril_fatface"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:text="Update Password" />

</RelativeLayout>